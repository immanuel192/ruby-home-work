  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug test in workspace",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "env": {
        "DOTENV": ".env.playpen"
      },
      "args": [
        "${relativeFile}",
        "--forceExit",
        "--testTimeout",
        "9999999"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ]
    }
  ]
}
